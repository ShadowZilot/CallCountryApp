<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet
        android:id="@+id/start">
        <Constraint
            android:id="@+id/detail_country_flag"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent">
        </Constraint>
        <Constraint
            android:id="@id/capital_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_marginEnd="6dp"
            motion:layout_constraintEnd_toStartOf="@id/capital_name_label"
            motion:layout_constraintBottom_toBottomOf="@id/capital_name_label"
            motion:layout_constraintTop_toTopOf="@id/capital_name_label"/>
        <Constraint
            android:id="@+id/country_name_label"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="16dp"
            motion:layout_constraintTop_toBottomOf="@id/detail_country_flag"
            motion:layout_constraintEnd_toEndOf="@id/detail_country_flag"
            motion:layout_constraintStart_toStartOf="@id/detail_country_flag">
        </Constraint>

        <Constraint
            android:id="@+id/capital_name_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="6dp"
            motion:layout_constraintTop_toBottomOf="@id/country_name_label"
            motion:layout_constraintStart_toStartOf="@id/country_name_label"
            motion:layout_constraintEnd_toEndOf="@id/country_name_label">
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/detail_country_flag"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
        </Constraint>
        <Constraint
            android:id="@id/capital_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginEnd="6dp"
            motion:layout_constraintEnd_toStartOf="@id/capital_name_label"
            motion:layout_constraintBottom_toBottomOf="@id/capital_name_label"
            motion:layout_constraintTop_toTopOf="@id/capital_name_label"/>
        <Constraint
            android:id="@+id/country_name_label"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_marginTop="4dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toEndOf="@id/detail_country_flag"
            motion:layout_constraintTop_toTopOf="parent">
        </Constraint>

        <Constraint
            android:id="@+id/capital_name_label"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="4dp"
            motion:layout_constraintTop_toBottomOf="@id/country_name_label"
            motion:layout_constraintStart_toStartOf="@id/country_name_label"
            motion:layout_constraintEnd_toEndOf="@id/country_name_label">
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetStart="@id/start"
        app:constraintSetEnd="@id/end"
        app:duration="1250">
        <OnSwipe
            app:touchAnchorId="@id/country_name_label"
            app:dragDirection="dragUp"/>
        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/capital_name_label"
                motion:framePosition="5"
                android:alpha="0.0"/>
            <KeyAttribute
                motion:motionTarget="@id/capital_sign"
                motion:framePosition="5"
                android:alpha="0.0"/>
            <KeyAttribute
                motion:motionTarget="@+id/country_name_label"
                motion:framePosition="5"
                android:alpha="0.0" />
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/country_name_label"
                motion:framePosition="100"
                android:alpha="1.0"/>
            <KeyAttribute
                motion:motionTarget="@id/capital_name_label"
                motion:framePosition="100"
                android:alpha="1.0"/>
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/country_name_label"
                motion:framePosition="97"
                android:alpha="0.0" />
            <KeyAttribute
                motion:motionTarget="@id/capital_name_label"
                motion:framePosition="97"
                android:alpha="0.0"/>
        </KeyFrameSet>

        <KeyFrameSet>
            <KeyAttribute
                motion:motionTarget="@id/country_name_label"
                motion:framePosition="100"
                android:scaleX="0.75"
                android:scaleY="0.75"/>
            <KeyAttribute
                motion:motionTarget="@id/capital_name_label"
                motion:framePosition="100"
                android:scaleX="0.75"
                android:scaleY="0.75"/>
        </KeyFrameSet>
    </Transition>
</MotionScene>
