<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shadowzilot.callcountry"
    android:versionCode="2"
    android:versionName="1.1" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="30" />

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/Theme.CallCountry" >
        <activity
            android:name="com.shadowzilot.callcountry.ui.ExamDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.shadowzilot.callcountry.ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CallCountry.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.shadowzilot.callcountry.ui.LearningActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CallCountry.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
        <activity
            android:name="com.shadowzilot.callcountry.ui.WorldPartGameActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.CallCountry.NoActionBar"
            android:windowSoftInputMode="adjustPan|stateAlwaysHidden" />
    </application>

</manifest>